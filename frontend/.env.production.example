# Production Environment Variables Template
# Copy this file to .env.production and update with your production values

# MongoDB Configuration
# For production, use a managed MongoDB service like MongoDB Atlas
# Example: mongodb+srv://<username>:<password>@cluster.mongodb.net/wellness-events?retryWrites=true&w=majority
MONGODB_URI=mongodb://root:password@mongodb:27017/wellness-events?authSource=admin

# JWT Configuration
# IMPORTANT: Generate a strong, random secret for production
# You can use: openssl rand -base64 32
JWT_SECRET=CHANGE_THIS_TO_A_STRONG_RANDOM_SECRET

# Application Configuration
NODE_ENV=production
NEXT_PUBLIC_API_URL=https://your-domain.com

# Optional: Postal Code Lookup API
# Configure if using an external postal code lookup service
POSTAL_CODE_API_KEY=
POSTAL_CODE_API_URL=

# Vercel-specific (if deploying to Vercel)
# These are automatically set by Vercel, but can be overridden
# VERCEL=1
# VERCEL_URL=your-app.vercel.app
